# CogniFy Docker Environment Variables
# Copy this file to .env and update values
# Created with love by Angela & David - 1 January 2026

# =============================================================================
# Database
# =============================================================================
DB_USER=cognify
DB_PASSWORD=cognify123
DB_NAME=cognify
DB_PORT=5432

# =============================================================================
# JWT Authentication
# =============================================================================
# IMPORTANT: Generate a secure key for production!
# python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# =============================================================================
# Ollama (Local LLM)
# =============================================================================
# Use host.docker.internal for Ollama running on host machine
OLLAMA_BASE_URL=http://host.docker.internal:11434
EMBEDDING_MODEL=nomic-embed-text
LLM_MODEL=llama3.2

# =============================================================================
# LLM Provider
# =============================================================================
# Options: ollama, openai
LLM_PROVIDER=ollama

# OpenAI (optional - only if using openai provider)
OPENAI_API_KEY=

# =============================================================================
# Encryption
# =============================================================================
# For database connector password encryption
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# =============================================================================
# Application
# =============================================================================
DEBUG=false
CORS_ORIGINS=http://localhost,http://localhost:80,http://localhost:5173

# =============================================================================
# Ports
# =============================================================================
BACKEND_PORT=8000
FRONTEND_PORT=80
