# CogniFy Environment Configuration
# Copy this to .env and update values

# App Settings
APP_NAME=CogniFy
VERSION=0.1.0
DEBUG=true

# Database
DATABASE_URL=postgresql://davidsamanyaporn@localhost:5432/cognify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# JWT Settings (Change in production!)
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS (Comma-separated)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# File Upload
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=50

# Embedding Settings
EMBEDDING_MODEL=nomic-embed-text
EMBEDDING_FALLBACK_MODEL=mxbai-embed-large
EMBEDDING_DIMENSION=768
EMBEDDING_CACHE_TTL=3600

# LLM Settings - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# LLM Settings - OpenAI (Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# RAG Settings
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50
RAG_DEFAULT_TOP_K=10
RAG_DEFAULT_THRESHOLD=0.3

# Logging
LOG_LEVEL=INFO
